<?xml version='1.0' encoding='utf-8'?>
<widget id="eu.bwc.coolsigner" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Cool signer</name>
    <description>
        Cold-wallet signer application that is very cool
    </description>
    <author email="anton.wiedermann@gmail.com" href="https://bitbucket.org/bad_weather_corp">
        Bad Weather Corporation
    </author>
    <content src="index.html" />
    <icon src="res/icon.png" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <hook src="scripts/hook_after_prepare.js" type="after_prepare" />
    <plugin name="cordova-plugin-android-permissions" spec="^1.0.0" />
    <engine name="browser" spec="^5.0.4" />
    <engine name="android" spec="^7.1.4" />
</widget>
